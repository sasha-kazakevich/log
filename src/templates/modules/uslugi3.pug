mixin uslugi3-column(item)
	div.col-md-4
		div.row.name-row
			span.name=item.name
		div.row
			div.col-md-5.from-row
				div.row
					img.img-left(src='img/uslugi/usl-world/'+item.src+'.png')
			div.col-md-3.arrow-row
				img.img-arrow(src='img/uslugi/usl-world/arrow.png')
			div.col-md-4.to-row
				img.img-right(src='img/uslugi/usl-world/belorussia.png')


div.container
